<% include ./partials/header %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<form action="/reset/<%= token %>" method="POST">
			  <legend>Redefinir senha</legend>
			  <div class="form-group">
			    <label for="password">Nova Senha</label>
			    <input type="password" name="password" value="" placeholder="Nova senha" autofocus="autofocus" class="form-control"/>
			  </div>
			  <div class="form-group">
			    <label for="confirm">Confirme a senha</label>
			    <input type="password" name="confirm" value="" placeholder="Confirme a senha" class="form-control"/>
			  </div>
			  <div class="form-group">
			    <button type="submit" class="btn btn-primary">Redefinir senha</button>
			  </div>
			</form>
		</div>
	</div>
</div>
<% include ./partials/footer %>