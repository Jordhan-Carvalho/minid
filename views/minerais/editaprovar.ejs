<% include ../partials/header.ejs %>

<div class="container">
    <div style="width:30%; margin: 0 auto;">
        <h1 style="margin-bottom:30px; margin-top:20px;">Editar <%= mineral.name %></h1>
        <form action="/minerais/<%= mineral._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <% if (currentUser && currentUser.isAdmin) { %>
            <p>Aprovar?</p>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="approved" id="inlineRadio1" value="true">
                <label class="form-check-label" for="inlineRadio1">Sim</label>
            </div>
            <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="approved" id="inlineRadio2" value="false">
                  <label class="form-check-label" for="inlineRadio2">Nao</label>
            </div>
            <% }; %>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Enviar!</button>
            </div>    
        </form>
        <a href="/minerais">Voltar</a>
    </div>
</div>

<% include ../partials/footer.ejs %>