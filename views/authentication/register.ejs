<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        
        <div class="col-sm-12 col-md-8" style="margin: 0 auto;">
            <h1 style="margin-bottom:30px; margin-top:20px;">Registro</h1>
            <form action="/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Usuário" name="username" required>
                </div>    
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="Senha" name="password" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Primeiro Nome" name="firstName" required>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="Último Nome" name="lastName" required>
                </div>   
                <div class="form-group">
                    <input class="form-control" type="email" placeholder="E-mail" name="email" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Link de Foto para Perfil (Não Obrigatório)" name="avatar">
                </div>   
                <div class="form-group">
                    <input class="form-control" type="password" placeholder="(Não Obrigatório)" name="admin">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Registrar!</button>
                </div>    
            </form>
            <a href="/minerais">Voltar</a>
        
        </div>
    </div>
</div>
        
        
<% include ../partials/footer.ejs %>
